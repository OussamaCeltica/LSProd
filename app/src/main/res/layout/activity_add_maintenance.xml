<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/bg_simple"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.leadersoft.celtica.lsprod.Maintenances.AddMaintenance">
    <TextView
        android:id="@+id/maint_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/Black"
        android:text="Type maintenance:"/>
    <TextView
        android:id="@+id/maint_nomType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@color/AppColor"
        android:text="Type maintenance:"/>

    <TextView
        android:id="@+id/add_mantain_ligne"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/bg_butt2"
        android:gravity="center"
        android:textColor="@color/Black"
        android:textColorHint="@color/Gray2"
        android:textSize="17sp"
        android:hint="séléctionner une ligne"/>

    <TextView
        android:id="@+id/add_mantain_emp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@drawable/bg_butt2"
        android:gravity="center"
        android:textColor="@color/Black"
        android:textColorHint="@color/Gray2"
        android:hint="séléctionner un empolyé"/>

    <TextView
        android:id="@+id/add_mantain_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@drawable/bg_butt2"
        android:gravity="center"
        android:textColor="@color/Black"
        android:textColorHint="@color/Gray2"
        android:hint="séléctionner le type"/>

    <TextView
        android:id="@+id/add_maint_ligne_valid"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:background="@drawable/bg_butt"
        android:textSize="17sp"
        android:textColor="@color/White"
        android:text="@string/add_pr_valider"/>

    <TextView
        android:id="@+id/add_mantain_valider"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_butt"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@color/White"
        android:text="Commencer"/>

</LinearLayout>
